# MongoDB Configuration
# Get your MongoDB connection string from MongoDB Atlas or MongoDB Compass
# Note: This is used server-side only (in API routes), not exposed to the client
# You can use MONGODB_URL, MONGO_URL, or MONGO_URI (all are supported)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# Or use MONGO_URI (alternative name)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# Optional: Database name (defaults to 'alan_refiner' if not specified)
MONGODB_DB_NAME=alan_refiner

# Backend Configuration
REFINER_BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_REFINER_BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_REFINER_BACKEND_WS_URL=ws://localhost:8000
NEXT_PUBLIC_APP_ORIGIN=http://localhost:3000
BACKEND_API_KEY=your_backend_api_key_here

# JWT Secret (change this in production)
JWT_SECRET=your-secure-jwt-secret-key-change-in-production

# OpenAI Configuration (optional - can be set per user)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Stripe Configuration (optional - for payment processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Google OAuth Configuration (for Google Sign-In)
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
